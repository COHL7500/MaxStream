<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

 <!--
  Hvis man ønsker at tilføje et element, skal man i GridPane huske at give et rowIndex og columnIndex.
  -->

<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="project_code.HelloController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <StackPane xmlns:fx="http://javafx.com/fxml">

        <HBox xmlns:fx="http://javafx.com/fxml"
              BorderPane.alignment="TOP_CENTER" style="-fx-background-color: blue" spacing="10" >

            <padding>
                <Insets bottom="10.0" left="200.0" right="10.0" top="50.0"/>
            </padding>

            <Label fx:id="welcomeText2"/>
            <Label fx:id="welcomeText" textFill="aquamarine"/>
            <Button text="1" onAction="#onAnotherButtonClick" minWidth="50" />
            <Button text="2" onAction="#onAnotherButtonClick" minWidth="50"/>
            <Button text="3" onAction="#onAnotherButtonClick" minWidth="50"/>
        </HBox>

    </StackPane>


    <VBox xmlns:fx="http://javafx.com/fxml"
          BorderPane.alignment="BASELINE_LEFT" style="-fx-background-color: blue" spacing="10">

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="175.0"/>
        </padding>
        <Button text="Hello!" onAction="#onHelloButtonClick" minWidth="60"/>
        <Button text="spaghetti" onAction="#onHelloButtonClick" minWidth="80"/>
        <Button text="kokos" onAction="#onHelloButtonClick" minWidth="60"/>
    </VBox>



</BorderPane>





